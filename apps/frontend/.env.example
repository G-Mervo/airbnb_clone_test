# Environment Configuration for Airbnb Frontend
# Copy this to .env.local for local development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_ENABLE_LOGGING=true

# Data source configuration
VITE_DATA_SOURCE=local

# Feature flags
VITE_ENABLE_DATA_VALIDATION=true
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION_MS=300000

# App features
VITE_ENABLE_BOOKING=true
VITE_ENABLE_PAYMENTS=false
VITE_ENABLE_REALTIME=false
VITE_ENABLE_OFFLINE=false
VITE_ENABLE_ANALYTICS=false

# UI configuration
VITE_ITEMS_PER_PAGE=20
VITE_ENABLE_INFINITE_SCROLL=true
VITE_SHOW_SKELETON_LOADER=true
VITE_SKELETON_DURATION=2500
